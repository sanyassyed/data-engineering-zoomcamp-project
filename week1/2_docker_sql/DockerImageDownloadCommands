# DOWNLOADING THE IMAGE FOR POSTGRES AND CREATING A WRITABLE CONTAINER LAYER OVER THE IMAGE
docker run -it \
  -e POSTGRES_USER="root" \
  -e POSTGRES_PASSWORD="root" \
  -e POSTGRES_DB="ny_taxi" \
  -v C://Users//SANYA//Documents//PersonalProjects//Zoomcamp//data-engineering-zoomcamp-main//week_1_basics_n_setup//2_docker_sql//testdocker//ny_taxi_postgres_data:/var/lib/postgresql/data \
  -p 5432:5432 \
  postgres:13

# DOWNLOADING THE IMAGE FOR PGADMIN AND CREATING A WRITABLE CONTAINER LAYER OVER THE IMAGE
docker run -it \
  -e PGADMIN_DEFAULT_EMAIL="admin@admin.com" \
  -e PGADMIN_DEFAULT_PASSWORD="root" \
  -p 8080:80 \
  dpage/pgadmin4


# Recreating the above containers within a docker network

# Creating the nerwork first
docker network create pg-network

# This will still preserve the data stored on the ny_taxi DB earlier
# DOWNLOADING THE IMAGE FOR POSTGRES AND CREATING A WRITABLE CONTAINER LAYER OVER THE IMAGE
docker run -it \
  -e POSTGRES_USER="root" \
  -e POSTGRES_PASSWORD="root" \
  -e POSTGRES_DB="ny_taxi" \
  -v C://Users//SANYA//Documents//PersonalProjects//Zoomcamp//data-engineering-zoomcamp-main//week_1_basics_n_setup//2_docker_sql//testdocker//ny_taxi_postgres_data:/var/lib/postgresql/data \
  -p 5432:5432 \
  --network=pg-network \
  --name pg-database \
  postgres:13

# Start the above PostgresDb using the following command
winpty pgcli -h localhost ....

# DOWNLOADING THE IMAGE FOR PGADMIN AND CREATING A WRITABLE CONTAINER LAYER OVER THE IMAGE
docker run -it \
  -e PGADMIN_DEFAULT_EMAIL="admin@admin.com" \
  -e PGADMIN_DEFAULT_PASSWORD="root" \
  -p 8080:80 \
  --network=pg-network \
  --name pgadmin \
  dpage/pgadmin4